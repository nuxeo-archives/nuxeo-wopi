<component name="org.nuxeo.wopi.auth">

  <extension target="org.nuxeo.ecm.platform.ui.web.auth.service.PluggableAuthenticationService"
    point="preFilter">

    <preFilter name="wopi" order="0" class="org.nuxeo.ecm.platform.ui.web.auth.service.WOPIAuthFilter" />

  </extension>

  <extension target="org.nuxeo.ecm.platform.ui.web.auth.service.PluggableAuthenticationService"
    point="specificChains">

    <specificAuthenticationChain name="wopi">
      <urlPatterns>
        <url>(.*)/wopi/.*</url>
      </urlPatterns>

      <replacementChain>
        <plugin>AUTOMATION_BASIC_AUTH</plugin>
        <plugin>TOKEN_AUTH</plugin>
      </replacementChain>
    </specificAuthenticationChain>

  </extension>

</component>
